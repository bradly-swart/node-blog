extends ../layout

block content
  h1=title
  ul.errors
    if errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}
  form(method='post', action='/posts/add', enctype='multipart/form-data')
    .form-group
      label(for="title") Title
      input.form-control(name='title', type='text')
    .form-group
      label(for="category") Category
      select.form-control(name='category', type='text')
        each category, i in categories
          option(value="#{category.name}") #{category.name}
    .form-group
      label(for="body") Body
      textarea.form-control(name='body', id='body')
    .form-group
      label(for="image") Image
      input.form-control(name='image', type='file')
    .form-group
      label(for="author") Author
      select.form-control(name='Author', type='text')
        option(value="Brad") Brad
        option(value="Annon") Annon
    input.btn.btn-default(name='submit', value='Save', type='submit')